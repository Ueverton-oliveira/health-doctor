<h1>Editando Consulta</h1>
<%= form_with(model: [ @appointment ]) do |form| %>
  <div class="form-group">
  <label for="inputEmail3" class="col-sm-3 col-form-label">Nome do Paciente</label>
  <div class="col-8 ">
    <%= form.select :doctor_id, class:"form-control"%>
  </div>
</div>
<div class="form-group">
  <label for="inputEmail3" class="col-sm-3 col-form-label">Nome do Doutor</label>
  <div class="col-8">
    <%= form.select :patient_id, class:"form-control"%>
  </div>
</div>

<div class="form-group">
  <label for="inputEmail3" class="col-sm-4 col-form-label">Data de agendamento</label>
  <div class="col-8">
    <%= form.date_field :start_at, class:"form-control", placeholder:"" %>
  </div>
</div>
<div class="form-group">
  <label for="inputEmail3" class="col-sm-3 col-form-label">Hor√°rio da consulta</label>
  <div class="col-8">
    <%= form.time_field :ends_at, class:"form-control", placeholder:"Enter CRM-UF" %>
  </div>
</div>
  <br>
  <div class="form-group">
    <%= link_to "Voltar", doctors_backoffice_doctors_path, class:"btn btn-outline-secondary" %>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </div>
<% end %>
