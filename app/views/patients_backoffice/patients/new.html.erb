<h1>Novo Paciente</h1>
<%= form_with(model: [ :patients_backoffice, @patient ]) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"Enter nome" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder:"Enter email" %>
  </div>
  <div class="form-group">
    <%= form.label :birth_date %>
    <%= form.text_field :birth_date, class:"form-control", placeholder:"Enter Idade" %>
  </div>
  <div class="form-group">
    <%= form.label :cpf %>
    <%= form.text_field :cpf  class:"form-control", placeholder:"Enter CPF" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder:"Senha" %>
  </div>
  <div class="form-group">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirmação de Senha" %>
  </div>
  <br>
  <%= link_to "Voltar", patients_backoffice_patients_path, class:"btn btn-outline-secondary"%>
  <button type="submit" class="btn btn-primary">Salvar</button>
<% end %>
